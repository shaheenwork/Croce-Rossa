<?xml version="1.0" encoding="utf-8"?>
   <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:fillViewport="true"
        android:layout_height="match_parent"
>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">


    <include
        android:id="@+id/logo"
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="20dp"
        app:layout_constraintHeight_percent="0.2"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/margin1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@+id/text1_loginwait_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.045"
       />

    <TextView
        android:id="@+id/text1_loginwait_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_page_text_small"
        android:gravity="center"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/loginpage_text"
        android:textColor="@color/colorTextDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/margin1" />


    <View
        android:id="@+id/margin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1_loginwait_page"
        app:layout_constraintBottom_toTopOf="@+id/et_nome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.045"
        />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_page_inseri_fields_margin_side"
        android:layout_marginEnd="@dimen/login_page_inseri_fields_margin_side"
        android:backgroundTint="@color/colorText"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="start"
        android:hint="@string/label_Nome"
        android:inputType="textCapWords"
        android:lines="1"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorLightGrey"
        android:textColorHint="@color/colorText"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/login_page_text_small"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/margin2" />

    <View
        android:id="@+id/margin3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nome"
        app:layout_constraintBottom_toTopOf="@+id/et_cognome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        />


    <EditText
        android:id="@+id/et_cognome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorText"
        android:layout_marginStart="@dimen/login_page_inseri_fields_margin_side"
        android:layout_marginEnd="@dimen/login_page_inseri_fields_margin_side"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="start"
        android:hint="@string/label_CogNome"
        android:inputType="textCapWords"
        android:lines="1"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorLightGrey"
        android:textColorHint="@color/colorText"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/login_page_text_small"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/margin3" />

    <View
        android:id="@+id/margin4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_cognome"
        app:layout_constraintBottom_toTopOf="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        />


    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorText"
        android:layout_marginStart="@dimen/login_page_inseri_fields_margin_side"
        android:layout_marginEnd="@dimen/login_page_inseri_fields_margin_side"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="start"
        android:hint="@string/label_email"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorLightGrey"
        android:textColorHint="@color/colorText"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/login_page_text_small"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/margin4" />

    <View
        android:id="@+id/margin5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintBottom_toTopOf="@+id/tv_societa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintHeight_percent="0.035"
        />

    <TextView
        android:id="@+id/tv_societa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_drop_down"
        android:background="?attr/editTextBackground"
        android:layout_marginStart="@dimen/login_page_inseri_fields_margin_side"
        android:backgroundTint="@color/colorText"
        android:layout_marginEnd="@dimen/login_page_inseri_fields_margin_side"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="start"
        android:hint="@string/label_Societa"
        android:inputType="number"
        android:lines="1"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/login_page_text_small"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/margin5" />


    <View
        android:id="@+id/margin6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_societa"
        app:layout_constraintBottom_toTopOf="@+id/tv_ruolo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintHeight_percent="0.035"
        />

    <TextView
        android:id="@+id/tv_ruolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_drop_down"
        android:background="?attr/editTextBackground"
        android:layout_marginStart="@dimen/login_page_inseri_fields_margin_side"
        android:backgroundTint="@color/colorText"
        android:layout_marginEnd="@dimen/login_page_inseri_fields_margin_side"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="start"
        android:hint="@string/label_Ruolo"
        android:inputType="number"
        android:lines="1"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/login_page_text_small"
        android:visibility="gone"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/margin6" />

    <View
        android:id="@+id/margin7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ruolo"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_button_shape"
        android:fontFamily="@font/montserrat_semibold"
        android:textAlignment="center"
        android:padding="10dp"
        android:text="@string/label_Invia"
        android:layout_marginStart="@dimen/login_page_inseri_fields_margin_side"
        android:layout_marginEnd="@dimen/login_page_inseri_fields_margin_side"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/login_page_text_small"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toBottomOf="@id/margin7"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>